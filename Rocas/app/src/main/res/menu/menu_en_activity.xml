<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">  <!--selecciono donde quiero q aparezca el menu-->

    <item android:id="@+id/itmConfiguracion"
        android:title="Configuración"
        android:icon="@android:drawable/ic_menu_preferences"
        app:showAsAction="never"/><!--no muestra configuracion como icono nunca-->

    <item android:id="@+id/itmInfo"
        android:title="Información"
        android:icon="@android:drawable/ic_menu_info_details"
        android:orderInCategory="2"
        app:showAsAction="ifRoom"/><!--se muestra el icono solo si hay espacio-->

    <item android:id="@+id/menu_buscar"
        android:title="Buscar"
        android:icon="@android:drawable/ic_menu_search"
        android:orderInCategory="1"
        app:showAsAction="always"/><!--siempre se ve el icono de buscar-->

</menu>